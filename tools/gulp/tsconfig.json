{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "lib": ["es2015", "dom", "es2016.array.include"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../dist/tools/gulp",
    "strictNullChecks": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "target": "es5",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@sbb-esta/angular-public": [
        "dist/sbb-esta/angular-public"
      ],
      "@sbb-esta/angular-public/*": [
        "dist/sbb-esta/angular-public/*"
      ]
    }
  },
  "files": [
    "gulpfile.ts"
  ]
}