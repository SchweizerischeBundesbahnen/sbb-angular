load(
    "//tools:defaults.bzl",
    "sass_library",
)

package(default_visibility = ["//visibility:public"])

sass_library(
    name = "common_scss_lib",
    srcs = [
        "_common.scss",
        "@npm//:node_modules/@angular/cdk/_index.scss",
    ] + glob(["includes/_*.scss"]),
)

sass_library(
    name = "core_scss_lib",
    srcs = ["_main.scss"] + glob(["typography/_*.scss"]),
    deps = [":common_scss_lib"],
)

filegroup(
    name = "legacy_scss",
    srcs = glob(["common/*.scss"]),
)
