load(
    "//tools:defaults.bzl",
    "markdown_to_html",
    "ng_module",
    "ng_test_library",
    "ng_web_test_suite",
    "sass_binary",
    "sass_library",
)

package(default_visibility = ["//visibility:public"])

ng_module(
    name = "dialog",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    assets = [
        ":dialog-container/dialog-container.css",
        ":dialog-content/dialog-content.css",
        ":dialog-footer/dialog-footer.css",
        ":dialog-header/dialog-header.css",
    ] + glob(["**/*.html"]),
    module_name = "@sbb-esta/angular/dialog",
    deps = [
        "//src/angular/icon",
        "@npm//@angular/animations",
        "@npm//@angular/cdk",
        "@npm//@angular/common",
        "@npm//@angular/core",
        "@npm//rxjs",
    ],
)

sass_library(
    name = "dialog_scss_lib",
    srcs = glob(["**/_*.scss"]),
    deps = ["//src/angular/styles:common_scss_lib"],
)

sass_binary(
    name = "dialog_container_dialog_container_scss",
    src = "dialog-container/dialog-container.scss",
    deps = [
        ":dialog_scss_lib",
    ],
)

sass_binary(
    name = "dialog_content_dialog_content_scss",
    src = "dialog-content/dialog-content.scss",
    deps = [
        ":dialog_scss_lib",
    ],
)

sass_binary(
    name = "dialog_footer_dialog_footer_scss",
    src = "dialog-footer/dialog-footer.scss",
    deps = [
        ":dialog_scss_lib",
    ],
)

sass_binary(
    name = "dialog_header_dialog_header_scss",
    src = "dialog-header/dialog-header.scss",
    deps = [
        ":dialog_scss_lib",
    ],
)

ng_test_library(
    name = "unit_test_sources",
    srcs = glob(
        ["**/*.spec.ts"],
        exclude = ["**/*.e2e.spec.ts"],
    ),
    deps = [
        ":dialog",
        "//src/angular/core/testing",
        "//src/angular/icon/testing",
        "@npm//@angular/cdk",
        "@npm//@angular/common",
        "@npm//@angular/platform-browser",
        "@npm//rxjs",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    static_css = [
        "//src/angular:typography",
    ],
    deps = [":unit_test_sources"],
)

markdown_to_html(
    name = "overview",
    srcs = [":dialog.md"],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)
