load(
    "//tools:defaults.bzl",
    "markdown_to_html",
    "ng_module",
    "ng_test_library",
    "ng_web_test_suite",
    "sass_binary",
)

package(default_visibility = ["//visibility:public"])

ng_module(
    name = "notification-simple",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    assets = [":notification-simple-container/notification-simple-container.component.css"] + glob(["**/*.html"]),
    module_name = "@sbb-esta/angular-business/notification-simple",
    deps = [
        "//src/angular-core/icon-directive",
        "//src/angular-icons/basic",
        "//src/angular-icons/navigation",
        "//src/angular-icons/status",
        "@npm//@angular/animations",
        "@npm//@angular/cdk",
        "@npm//@angular/common",
        "@npm//@angular/core",
        "@npm//rxjs",
    ],
)

sass_binary(
    name = "notification_simple_container_notification_simple_container_component_scss",
    src = "notification-simple-container/notification-simple-container.component.scss",
    deps = [
        "//src/angular-core/styles:common_scss_lib",
    ],
)

ng_test_library(
    name = "unit_test_sources",
    srcs = glob(
        ["**/*.spec.ts"],
        exclude = ["**/*.e2e.spec.ts"],
    ),
    deps = [
        ":notification-simple",
        "//src/angular-core/icon-directive",
        "//src/angular-icons",
        "@npm//@angular/cdk",
        "@npm//@angular/common",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    deps = [":unit_test_sources"],
)

markdown_to_html(
    name = "overview",
    srcs = [":notification-simple.md"],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)
