load(
    "//tools:defaults.bzl",
    "ng_module",
    "sass_binary",
)

package(default_visibility = ["//visibility:public"])

ng_module(
    name = "dropdown-examples",
    srcs = [
        "dropdown-example/dropdown-example.component.ts",
        "dropdown-examples.module.ts",
    ],
    assets = [
        ":dropdown-example/dropdown-example.component.css",
        "dropdown-example/dropdown-example.component.html",
    ],
    tsconfig = "//src/showcase:tsconfig.json",
    deps = [
        "//src/angular-icons/user",
        "//src/angular-public/button",
        "//src/angular-public/dropdown",
        "//src/showcase/app/shared",
        "@npm//@angular/common",
        "@npm//@angular/core",
        "@npm//@angular/router",
    ],
)

filegroup(
    name = "source-files",
    srcs = glob([
        "**/*.html",
        "**/*.scss",
        "**/*.ts",
    ]),
)

sass_binary(
    name = "dropdown_example_dropdown_example_component_scss",
    src = "dropdown-example/dropdown-example.component.scss",
)
