load(
    "//tools:defaults.bzl",
    "ng_ts_library",
    "sass_binary",
)

package(default_visibility = ["//visibility:public"])

ng_ts_library(
    name = "file-selector-examples",
    srcs = [
        "file-selector-example/file-selector-example.component.ts",
        "file-selector-examples.module.ts",
    ],
    assets = [
        ":file-selector-example/file-selector-example.component.css",
        "file-selector-example/file-selector-example.component.html",
    ],
    tsconfig = "//src/showcase:tsconfig.json",
    deps = [
        "//src/angular-public/checkbox",
        "//src/angular-public/file-selector",
        "@npm//@angular/common",
        "@npm//@angular/core",
        "@npm//@angular/forms",
        "@npm//rxjs",
    ],
)

filegroup(
    name = "source-files",
    srcs = glob([
        "**/*.html",
        "**/*.scss",
        "**/*.ts",
    ]),
)

sass_binary(
    name = "file_selector_example_file_selector_example_component_scss",
    src = "file-selector-example/file-selector-example.component.scss",
)
