load(
    "//tools:defaults.bzl",
    "ng_module",
    "sass_binary",
)

package(default_visibility = ["//visibility:public"])

ng_module(
    name = "tooltip-examples",
    srcs = [
        "tooltip-example/tooltip-example.component.ts",
        "tooltip-examples.module.ts",
    ],
    assets = [
        ":tooltip-example/tooltip-example.component.css",
        "tooltip-example/tooltip-example.component.html",
    ],
    tsconfig = "//src/showcase:tsconfig.json",
    deps = [
        "//src/icons/navigation",
        "//src/public/field",
        "//src/public/tooltip",
        "@npm//@angular/common",
        "@npm//@angular/core",
        "@npm//@angular/forms",
    ],
)

filegroup(
    name = "source-files",
    srcs = glob([
        "**/*.html",
        "**/*.scss",
        "**/*.ts",
    ]),
)

sass_binary(
    name = "tooltip_example_tooltip_example_component_scss",
    src = "tooltip-example/tooltip-example.component.scss",
)
