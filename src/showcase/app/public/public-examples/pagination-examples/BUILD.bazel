load(
    "//tools:defaults.bzl",
    "ng_ts_library",
    "sass_binary",
)

package(default_visibility = ["//visibility:public"])

ng_ts_library(
    name = "pagination-examples",
    srcs = [
        "pagination-example/pagination-example.component.ts",
        "pagination-examples.module.ts",
    ],
    assets = [
        ":pagination-example/pagination-example.component.css",
        "pagination-example/pagination-example.component.html",
    ],
    tsconfig = "//src/showcase:tsconfig.json",
    deps = [
        "//src/angular-public/button",
        "//src/angular-public/field",
        "//src/angular-public/pagination",
        "@npm//@angular/common",
        "@npm//@angular/core",
        "@npm//@angular/forms",
        "@npm//@angular/router",
    ],
