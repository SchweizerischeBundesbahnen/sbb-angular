load(
    "//tools:defaults.bzl",
    "ng_ts_library",
    "sass_binary",
)

package(default_visibility = ["//visibility:public"])

ng_ts_library(
    name = "accordion-examples",
    srcs = [
        "accordion-example/accordion-example.component.ts",
        "accordion-examples.module.ts",
    ],
    assets = [
        ":accordion-example/accordion-example.component.css",
        "accordion-example/accordion-example.component.html",
    ],
    tsconfig = "//src/showcase:tsconfig.json",
    deps = [
        "//src/angular-icons/arrow",
        "//src/angular-public/accordion",
        "//src/angular-public/button",
        "//src/angular-public/checkbox",
        "//src/angular-public/field",
        "//src/angular-public/radio-button",
        "@npm//@angular/common",
        "@npm//@angular/core",
        "@npm//@angular/forms",
        "@npm//rxjs",
    ],
)

filegroup(
    name = "source-files",
    srcs = glob([
        "**/*.html",
        "**/*.scss",
        "**/*.ts",
    ]),
)

sass_binary(
    name = "accordion_example_accordion_example_component_scss",
    src = "accordion-example/accordion-example.component.scss",
)
