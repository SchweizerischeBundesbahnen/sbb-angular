load(
    "//tools:defaults.bzl",
    "ng_module",
    "sass_binary",
)

package(default_visibility = ["//visibility:public"])

ng_module(
    name = "processflow-examples",
    srcs = [
        "processflow-examples.module.ts",
        "skippable-processflow-example/skippable-processflow-example.component.ts",
    ],
    assets = [
        ":skippable-processflow-example/skippable-processflow-example.component.css",
        "skippable-processflow-example/skippable-processflow-example.component.html",
    ],
    tsconfig = "//src/showcase:tsconfig.json",
    deps = [
        "//src/business/processflow",
        "@npm//@angular/common",
        "@npm//@angular/core",
    ],
)

filegroup(
    name = "source-files",
    srcs = glob([
        "**/*.html",
        "**/*.scss",
        "**/*.ts",
    ]),
)

sass_binary(
    name = "skippable_processflow_example_skippable_processflow_example_component_scss",
    src = "skippable-processflow-example/skippable-processflow-example.component.scss",
)
