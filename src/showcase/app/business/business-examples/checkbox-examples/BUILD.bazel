load(
    "//tools:defaults.bzl",
    "ng_module",
    "sass_binary",
)

package(default_visibility = ["//visibility:public"])

ng_module(
    name = "checkbox-examples",
    srcs = [
        "checkbox-example/checkbox-example.component.ts",
        "checkbox-examples.module.ts",
        "checkbox-group-example/checkbox-group-example.component.ts",
        "checkbox-indeterminate-state-example/checkbox-indeterminate-state-example.component.ts",
    ],
    assets = [
        ":checkbox-indeterminate-state-example/checkbox-indeterminate-state-example.component.css",
        "checkbox-example/checkbox-example.component.html",
        "checkbox-group-example/checkbox-group-example.component.html",
        "checkbox-indeterminate-state-example/checkbox-indeterminate-state-example.component.html",
    ],
    tsconfig = "//src/showcase:tsconfig.json",
    deps = [
        "//src/angular-business/checkbox",
        "//src/showcase/app/shared",
        "@npm//@angular/cdk",
        "@npm//@angular/common",
        "@npm//@angular/core",
        "@npm//@angular/forms",
    ],
)

filegroup(
    name = "source-files",
    srcs = glob([
        "**/*.html",
        "**/*.scss",
        "**/*.ts",
    ]),
)

sass_binary(
    name = "checkbox_indeterminate_state_example_checkbox_indeterminate_state_example_component_scss",
    src = "checkbox-indeterminate-state-example/checkbox-indeterminate-state-example.component.scss",
)
