load(
    "//tools:defaults.bzl",
    "markdown_to_html",
    "ng_module",
    "ng_test_library",
    "ng_web_test_suite",
)

package(default_visibility = ["//visibility:public"])

ng_module(
    name = "core",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    module_name = "@sbb-esta/angular-maps/core",
    deps = [
        "//src/angular-maps/esri-config",
        "@npm//@angular/core",
        "@npm//@types/arcgis-js-api",
    ],
)

ng_test_library(
    name = "unit_test_sources",
    srcs = glob(
        ["**/*.spec.ts"],
        exclude = ["**/*.e2e.spec.ts"],
    ),
    deps = [
        ":core",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    deps = [
        # do not sort
        "//tools/esri-loader:esri_loader_umd_module",
        ":unit_test_sources",
    ],
)

markdown_to_html(
    name = "overview",
    srcs = [":core.md"],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)

filegroup(
    name = "html-source-files",
    srcs = glob(["**/*.html"]),
)
