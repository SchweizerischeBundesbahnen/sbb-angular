{
  "name": "sbb-angular",
  "version": "8.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "clean": "rimraf dist coverage lintReport.json",
    "format": "prettier --write **/*.{js,ts,css,scss,json,md,html}",
    "lint": "run-p lint:angular-icons lint:angular-public lint:angular-business lint:angular-keycloak lint:angular-showcase",
    "lint:angular-icons": "ng lint @sbb-esta/angular-icons",
    "lint:angular-business": "run-p lint:angular-business:*",
    "lint:angular-business:console": "ng lint @sbb-esta/angular-business",
    "lint:angular-business:report": "ng lint @sbb-esta/angular-business --format=json > angularBusinessLintReport.json",
    "lint:angular-public": "run-p lint:angular-public:*",
    "lint:angular-public:console": "ng lint @sbb-esta/angular-public",
    "lint:angular-public:report": "ng lint @sbb-esta/angular-public --format=json > angularPublicLintReport.json",
    "lint:angular-keycloak": "run-p lint:angular-keycloak:*",
    "lint:angular-keycloak:console": "ng lint @sbb-esta/angular-keycloak",
    "lint:angular-keycloak:report": "ng lint @sbb-esta/angular-keycloak --format=json > angularKeycloakLintReport.json",
    "lint:angular-showcase": "ng lint angular-showcase",
    "build": "run-s build:libs build:angular-showcase",
    "build:libs": "run-s build:angular-icons build:angular-public build:angular-business build:angular-keycloak",
    "build:angular-icons": "run-s build:angular-icons:*",
    "build:angular-icons:ng": "ng build @sbb-esta/angular-icons",
    "build:angular-icons:license": "copyfiles LICENSE ./dist/sbb-esta/angular-icons/",
    "build:angular-icons:schematics": "cd projects/sbb-esta/angular-icons && rollup --config rollup.config.js",
    "build:angular-icons:schematics:generate-icons": "cd projects/sbb-esta/angular-icons && schematics .:generate-icon-modules --dist src/lib --debug false",
    "build:angular-business": "run-s build:angular-business:*",
    "build:angular-business:ng": "ng build @sbb-esta/angular-business",
    "build:angular-business:styles": "cd ./projects/sbb-esta/angular-business/src/styles/ && scss-bundle -c main-bundle.config.json",
    "build:angular-business:typography": "node-sass ./projects/sbb-esta/angular-business/src/typography.scss ./dist/sbb-esta/angular-business/typography.css --include-path ./projects/sbb-esta/angular-business/src/styles/common",
    "build:angular-business:license": "copyfiles LICENSE ./dist/sbb-esta/angular-business/",
    "build:angular-public": "run-s build:angular-public:*",
    "build:angular-public:ng": "ng build @sbb-esta/angular-public",
    "build:angular-public:styles": "cd ./projects/sbb-esta/angular-public/src/styles/ && scss-bundle -c main-bundle.config.json",
    "build:angular-public:typography": "node-sass ./projects/sbb-esta/angular-public/src/typography.scss ./dist/sbb-esta/angular-public/typography.css --include-path ./projects/sbb-esta/angular-public/src/styles/common",
    "build:angular-public:license": "copyfiles LICENSE ./dist/sbb-esta/angular-public/",
    "build:angular-keycloak": "run-s build:angular-keycloak:*",
    "build:angular-keycloak:ng": "ng build @sbb-esta/angular-keycloak",
    "build:angular-keycloak:license": "copyfiles LICENSE ./dist/sbb-esta/angular-public/",
    "build:angular-showcase": "run-s build:angular-showcase:*",
    "build:angular-showcase:docs": "gulp docs",
    "build:angular-showcase:ng": "ng build angular-showcase --prod",
    "build:angular-showcase:license": "copyfiles LICENSE ./dist/angular-showcase/",
    "build:angular-showcase:packagejson": "cd projects/angular-showcase && copyfiles package.json ../../dist/angular-showcase",
    "test": "run-s test:angular-public",
    "test:angular-business": "ng test @sbb-esta/angular-business -c ci",
    "test:angular-public": "ng test @sbb-esta/angular-public -c ci",
    "test:angular-keycloak": "ng test @sbb-esta/angular-keycloak -c ci",
    "test:angular-showcase": "ng test angular-showcase -c ci",
    "sonar": "node ./scripts/sonar.js",
    "changelog": "standard-version --tag-prefix=\"\"",
    "publish:staging": "node ./scripts/publish.js",
    "publish:library": "node ./scripts/publish.js release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SchweizerischeBundesbahnen/sbb-angular.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/SchweizerischeBundesbahnen/sbb-angular/issues"
  },
  "homepage": "https://angular.app.sbb.ch/latest",
  "dependencies": {
    "@angular/animations": "^8.0.0",
    "@angular/cdk": "^8.0.1",
    "@angular/common": "^8.0.0",
    "@angular/compiler": "^8.0.0",
    "@angular/core": "^8.0.0",
    "@angular/forms": "^8.0.0",
    "@angular/platform-browser": "^8.0.0",
    "@angular/platform-browser-dynamic": "^8.0.0",
    "@angular/router": "^8.0.0",
    "@ng-bootstrap/ng-bootstrap": "^4.1.3",
    "bootstrap": "^4.3.1",
    "core-js": "^2.6.2",
    "font-awesome": "^4.7.0",
    "keycloak-js": "^3.4.3",
    "ngx-monaco-editor": "^7.0.0",
    "ngx-perfect-scrollbar": "^8.0.0",
    "rxjs": "6.5.2",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.0",
    "@angular-devkit/build-ng-packagr": "~0.800.0",
    "@angular-devkit/core": "^8.0.2",
    "@angular-devkit/schematics": "^8.0.2",
    "@angular-devkit/schematics-cli": "0.800.2",
    "@angular/cli": "8.0.2",
    "@angular/compiler-cli": "^8.0.0",
    "@angular/language-service": "^8.0.0",
    "@types/grecaptcha": "^2.0.36",
    "@types/gulp": "^4.0.5",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "^2.0.4",
    "@types/node": "^8.10.37",
    "@types/run-sequence": "^0.0.30",
    "codelyzer": "^5.0.1",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "dgeni": "^0.4.11",
    "dgeni-packages": "^0.27.1",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-clean-css": "^3.10.0",
    "gulp-cli": "^2.0.1",
    "gulp-connect": "^5.6.1",
    "gulp-conventional-changelog": "^2.0.9",
    "gulp-dom": "^1.0.0",
    "gulp-flatten": "^0.4.0",
    "gulp-highlight-files": "^0.0.6",
    "gulp-html-beautify": "^1.0.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^2.0.2",
    "gulp-markdown": "^3.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-transform": "^3.0.5",
    "gulp-util": "^3.0.8",
    "highlight.js": "^9.15.6",
    "husky": "^2.4.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.0",
    "karma-browserstack-launcher": "^1.5.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-junit-reporter": "^1.2.0",
    "karma-parallel": "^0.3.1",
    "karma-sonarqube-reporter": "^1.2.3",
    "karma-sourcemap-loader": "^0.3.7",
    "lint-staged": "^8.2.1",
    "lodash": "^4.17.11",
    "ng-bullet": "^1.0.3",
    "ng-packagr": "^5.1.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.17.0",
    "protractor": "^5.4.2",
    "rollup": "^1.12.3",
    "rollup-plugin-copy-glob": "^0.3.0",
    "rollup-plugin-typescript2": "^0.21.1",
    "run-sequence": "^2.2.1",
    "scss-bundle": "^2.5.1",
    "semver": "^5.6.0",
    "sonarqube-scanner": "^2.4.0",
    "standard-version": "^6.0.1",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.8.0",
    "svgo": "^1.2.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tsickle": "^0.35.0",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-sonarts": "^1.9.0",
    "typescript": "~3.4.5"
  },
  "standard-version": {
    "skip": {
      "tag": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf",
    "printWidth": 100,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss",
    "rules": {
      "no-empty-source": null,
      "selector-type-no-unknown": [
        true,
        {
          "ignoreTypes": [
            "/^sbb-/",
            "perfect-scrollbar",
            "ngx-monaco-editor",
            "ngb-tabset"
          ]
        }
      ],
      "no-descending-specificity": null
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,scss,json,md,html}": [
      "npx prettier --write",
      "git add"
    ]
  }
}
