{
  "name": "sbb-angular",
  "version": "9.4.0",
  "private": true,
  "engines": {
    "node": "^12.0.0",
    "yarn": ">= 1.0.0"
  },
  "scripts": {
    "postinstall": "node tools/postinstall/apply-patches.js && ngcc --properties main --create-ivy-entry-points && node tools/postinstall/update-ngcc-main-fields.js",
    "build": "node ./scripts/build-packages-dist.js",
    "bazel:buildifier": "find . -type f \\( -name \"*.bzl\" -or -name WORKSPACE -or -name BUILD -or -name BUILD.bazel \\) ! -path \"*/node_modules/*\" | xargs buildifier -v --warnings=attr-cfg,attr-license,attr-non-empty,attr-output-default,attr-single-file,constant-glob,ctx-args,depset-iteration,depset-union,dict-concatenation,duplicated-name,filetype,git-repository,http-archive,integer-division,load,load-on-top,native-build,native-package,output-group,package-name,package-on-top,redefined-variable,repository-name,same-origin-load,string-iteration,unused-variable,unsorted-dict-items,out-of-order-load",
    "bazel:format-lint": "yarn -s bazel:buildifier --lint=warn --mode=check",
    "start": "ibazel run //src/showcase:devserver",
    "test": "node ./scripts/run-component-tests.js",
    "test-local": "yarn -s test --local",
    "test-firefox": "yarn -s test --firefox",
    "tslint": "tslint -c tslint.json --project ./tsconfig.json",
    "lint": "yarn -s tslint && yarn -s bazel:format-lint",
    "format:prettier": "prettier --write **/*.{js,ts,css,scss,json,md,html}",
    "format:bazel": "yarn -s bazel:buildifier --lint=fix --mode=fix",
    "format": "yarn -s format:prettier && yarn -s format:bazel",
    "build:business:public2business": "ng g .:public2business",
    "build:schematics": "rollup --config schematics/rollup.config.js",
    "build:svg-icons": "ng g .:svg-icons --project @sbb-esta/angular-icons --targetDir experimental",
    "build:svg-registry": "ng g .:svg-registry --stripNumberIdInCollection --stripNumberIds --stripSbbInName",
    "release": "standard-version --tag-prefix=\"\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbb-design-systems/sbb-angular.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sbb-design-systems/sbb-angular/issues"
  },
  "homepage": "https://angular.app.sbb.ch/latest",
  "schematics": "./schematics/collection.json",
  "dependencies": {
    "@angular/animations": "^9.1.0",
    "@angular/cdk": "^9.2.0",
    "@angular/common": "^9.1.0",
    "@angular/compiler": "^9.1.0",
    "@angular/core": "^9.1.0",
    "@angular/forms": "^9.1.0",
    "@angular/localize": "^9.1.0",
    "@angular/platform-browser": "^9.1.0",
    "@angular/platform-browser-dynamic": "^9.1.0",
    "@angular/router": "^9.1.0",
    "esri-loader": "~2.13.0",
    "keycloak-js": "^4.8.3",
    "ngx-perfect-scrollbar": "^8.0.0",
    "rxjs": "~6.5.4",
    "systemjs": "^6.2.6",
    "tslib": "^1.11.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/core": "^9.1.0",
    "@angular-devkit/schematics": "^9.1.0",
    "@angular-devkit/schematics-cli": "^0.900.5",
    "@angular/bazel": "^9.1.0",
    "@angular/cli": "~9.1.0",
    "@angular/compiler-cli": "^9.1.0",
    "@angular/language-service": "^9.1.0",
    "@babel/cli": "^7.8.0",
    "@babel/core": "^7.8.0",
    "@babel/preset-env": "^7.8.0",
    "@bazel/bazelisk": "^1.3.0",
    "@bazel/buildifier": "^2.2.1",
    "@bazel/ibazel": "0.11.1",
    "@bazel/jasmine": "^1.4.1",
    "@bazel/karma": "^1.4.1",
    "@bazel/protractor": "^1.4.1",
    "@bazel/rollup": "^1.4.1",
    "@bazel/terser": "^1.4.1",
    "@bazel/typescript": "^1.4.1",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/arcgis-js-api": "~4.14.0",
    "@types/grecaptcha": "^2.0.36",
    "@types/highlight.js": "^9.12.3",
    "@types/html-minifier": "^3.5.3",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/marked": "^0.7.2",
    "@types/node": "^12.12.28",
    "@types/svgo": "^1.3.0",
    "@wessberg/rollup-plugin-ts": "^1.2.17",
    "ajv": "^6.11.0",
    "codelyzer": "^5.2.1",
    "copyfiles": "^2.2.0",
    "dgeni": "^0.4.12",
    "dgeni-packages": "^0.28.3",
    "highlight.js": "^9.18.1",
    "history-server": "1.3.1",
    "html-insert-assets": "0.2.0",
    "html-minifier": "^4.0.0",
    "husky": "^4.2.3",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "4.4.1",
    "karma-browserstack-launcher": "^1.5.1",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-firefox-launcher": "1.2.0",
    "karma-jasmine": "^3.1.1",
    "karma-jasmine-html-reporter": "^1.5.2",
    "karma-junit-reporter": "^2.0.1",
    "karma-parallel": "^0.3.1",
    "karma-requirejs": "1.1.0",
    "karma-sonarqube-reporter": "^1.3.0",
    "karma-sourcemap-loader": "0.3.7",
    "lint-staged": "^10.0.7",
    "marked": "^0.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.19.1",
    "protractor": "5.4.2",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.8",
    "requirejs": "2.3.6",
    "resize-observer-polyfill": "^1.5.1",
    "rollup": "1.27.5",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "sass": "1.22.10",
    "scss-bundle": "^3.0.2",
    "semver": "^7.1.3",
    "shelljs": "^0.8.3",
    "standard-version": "^7.1.0",
    "stylelint": "^13.2.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.14.2",
    "svgo": "^1.3.2",
    "terser": "4.4.0",
    "ts-node": "~8.3.0",
    "tsconfig-paths": "^3.9.0",
    "tsickle": "0.38.1",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-plugin-prettier": "^2.1.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "~3.8.3"
  },
  "resolutions": {
    "dgeni-packages/typescript": "3.8.3"
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf",
    "printWidth": 100
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss",
    "rules": {
      "no-empty-source": null,
      "selector-type-no-unknown": [
        true,
        {
          "ignoreTypes": [
            "/^sbb-/",
            "perfect-scrollbar"
          ]
        }
      ],
      "no-descending-specificity": null
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,scss,json,md,html}": [
      "npx prettier --write",
      "git add"
    ]
  }
}
