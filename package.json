    "@ng-bootstrap/ng-bootstrap": "^3.3.1",
    "bootstrap": "^4.2.1",
    "core-js": "^2.6.2",
    "font-awesome": "^4.7.0",
    "ngx-monaco-editor": "^6.0.0",
    "ngx-perfect-scrollbar": "^7.2.0",
    "rxjs": "6.3.3",
    "util": "^0.10.4",
    "zone.js": "^0.8.27"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.13.8",
    "@angular-devkit/build-ng-packagr": "0.13.8",
    "@angular-devkit/core": "^7.3.8",
    "@angular-devkit/schematics": "^7.3.8",
    "@angular-devkit/schematics-cli": "0.13.8",
    "@angular/cli": "7.3.8",
    "@angular/compiler-cli": "^7.2.0",
    "@angular/language-service": "^7.2.0",
    "@types/grecaptcha": "^2.0.36",
    "@types/gulp": "^4.0.5",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "^2.0.4",
    "@types/node": "^8.10.37",
    "@types/run-sequence": "^0.0.30",
    "codelyzer": "^4.5.0",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "dgeni": "^0.4.11",
    "dgeni-packages": "^0.27.1",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-clean-css": "^3.10.0",
    "gulp-cli": "^2.0.1",
    "gulp-connect": "^5.6.1",
    "gulp-conventional-changelog": "^2.0.9",
    "gulp-dom": "^1.0.0",
    "gulp-flatten": "^0.4.0",
    "gulp-highlight-files": "^0.0.6",
    "gulp-html-beautify": "^1.0.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^2.0.2",
    "gulp-markdown": "^3.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-transform": "^3.0.5",
    "gulp-util": "^3.0.8",
    "highlight.js": "^9.13.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.0",
    "karma-browserstack-launcher": "^1.3.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.3",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-sonarqube-reporter": "^1.2.3",
    "karma-sourcemap-loader": "^0.3.7",
    "lodash": "^4.17.11",
    "ng-packagr": "^4.4.5",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.17.0",
    "protractor": "^5.4.2",
    "rollup": "^1.9.0",
    "rollup-plugin-copy-glob": "^0.3.0",
    "rollup-plugin-typescript2": "^0.20.1",
    "run-sequence": "^2.2.1",
    "scss-bundle": "^2.4.0",
    "semver": "^5.6.0",
    "sonar-scanner": "^3.1.0",
    "svgo": "^1.0.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tsickle": "^0.33.1",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-sonarts": "^1.9.0",
    "typescript": "~3.2.2"
  },
  "optionalDependencies": {
    "puppeteer": "^1.11.0"
  },
  "staging": {
    "root": "./dist/angular-showcase"
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf", 
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,scss,json,md,html}": [
      "npx prettier --write",
      "git add",
      "npx ng lint @sbb-esta/angular-public"
    ]
  }
}
